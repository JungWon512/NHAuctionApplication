<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <properties
            resource="com/nh/controller/support/properties/db_value.properties"/>

    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <setting name="cacheEnabled" value="false"/>
    </settings>

    <typeAliases>
        <typeAlias alias="linkedHashMap"
                   type="java.util.LinkedHashMap"/>
        <typeAlias alias="list"
                   type="java.util.List"/>
        <typeAlias alias="AuctionRound"
                   type="com.nh.controller.model.AuctionRound"/>
        <typeAlias alias="EntryInfo"
                   type="com.nh.share.controller.models.EntryInfo"/>
        <typeAlias alias="ConnectionInfo"
                   type="com.nh.share.common.models.ConnectionInfo"/>
        <typeAlias alias="UserInfo"
                   type="com.nh.controller.model.UserInfo"/>
        <typeAlias alias="AuctionRound"
                   type="com.nh.controller.model.AuctionRound"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${db.driver}"/>
                <property name="url" value="${db.url}"/>
                <property name="username" value="${db.username}"/>
                <property name="password" value="${db.password}"/>
                <property name="poolPingQuery" value="select 1"/> <!-- 핑 쿼리 -->
                <property name="poolPingEnabled" value="true"/>  <!-- 핑 쿼리 -->
                <property name="poolMaximumActiveConnections" value="100"/> <!-- 주어진 시간에 존재할수 있는 활성화된 커넥션 수 -->
                <property name="poolMaximumIdleConnections" value="100"/>    <!-- 주어진 시간에 존재할 수 있는 유휴 커넥션의 수 -->
                <property name="poolPingConnectionsNotUsedFor" value="7200000"/> <!--  유휴상태의 커넥션이 닫히는지 판단할 시간(ms): 2시간마다 -->
                <property name="poolTimeToWait" value="20000"/> <!-- 사용된 커넥션을 기다리는 시간(ms): 20초(default) -->
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper
                resource="com/nh/controller/mapper/AuctionRoundMapper.xml"/>
        <mapper resource="com/nh/controller/mapper/EntryInfoMapper.xml"/>
        <mapper
                resource="com/nh/controller/mapper/ConnectionInfoMapper.xml"/>
    </mappers>

</configuration>
